---
import "../styles/global.css";

interface Props {
	title?: string;
}

const { title = "GAB" } = Astro.props;
---

<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<slot />
	</body>
</html>

<style>
	html,
	body {
		margin: 0;
		width: 100%;
		height: 100%;
	}
	:root {
		.shadow {
			box-shadow: 2.8px 4px 0px rgba(0, 0, 0, 1);
		}
		.big-shadow {
			box-shadow: 4px 6px 0px rgba(0, 0, 0, 1);
		}
		.bigger-shadow {
			box-shadow: 10px 10px 0px rgba(0, 0, 0, 1);
		}
	}
</style>
