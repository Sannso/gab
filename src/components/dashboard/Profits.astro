---
interface Props {
    profits: number;
}

const { profits } = Astro.props;
---

<article
    class={`flex flex-col items-center justify-center gap-5 p-5 bg-white border-2 border-black rounded-xl 
                             h-48 w-auto `}
>
    <h2 class="text-2xl font-extrabold font-LexendMega -tracking-widest text-blue-800">Ganancias</h2>
    <h3 class="text-3xl font-bold mx-auto font-LexendMega">
        {profits}
    </h3>
</article>
