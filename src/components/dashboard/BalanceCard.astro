---
import Button from "@components/Button.astro";

interface Props {
    balance: number;
}

const { balance } = Astro.props;
---

<article
    class={`flex flex-col gap-5 p-5 bg-white border-2 border-black rounded-xl 
                             h-48 w-full min-w-48 `}
>
    <h2 class="text-2xl font-extrabold font-LexendMega -tracking-widest">
        Saldo
    </h2>
    <h3 class="text-3xl font-bold mx-auto font-LexendMega">
        {balance}
    </h3>
    <div class="flex w-full justify-center gap-5">
        <Button text="+" color="blue" />
        <Button text="-" color="blue" />
    </div>
</article>
